#https://www.linuxtechi.com/how-to-setup-haproxy-ssl-termination-ubuntu/
sudo apt update
sudo apt install snapd
sudo apt-get remove certbot
sudo apt-get install certbot
# Before the next command you need to stop haproxy using 
sudo service stop haproxy
#Next, run certbot using the standalone plugin to obtain the certificate
sudo certbot certonly --standalone --preferred-challenges http --http-01-port 80 -d globalticket.tech -d www.globalticket.tech
sudo ls /etc/letsencrypt/live/your_domain_name
sudo mkdir -p /etc/haproxy/certs
DOMAIN='example.com' sudo -E bash -c 'cat /etc/letsencrypt/live/$DOMAIN/fullchain.pem /etc/letsencrypt/live/$DOMAIN/privkey.pem > /etc/haproxy/certs/$DOMAIN.pem'
sudo chmod -R go-rwx /etc/haproxy/certs
sudo nano /etc/haproxy/haproxy.cfg
